@page
@using Microsoft.AspNetCore.Components;
@model PetMingle.Areas.Identity.Pages.Account.LoginModel

<div class="col-xs-1 moving-bkg" align="center">
    <div class="text-start text-black form-wrapper" style="max-width:500px">
        <section class="form-section">
            <form id="account" method="post" style="height: 100%;">

                <h2 class="text-center mb-3">Log In</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" aria-required="true"></div>
                <ht class="form-ht" />

                <div>
                    <label asp-for="Input.Email" class="form-label"></label>

                    <input asp-for="Input.Email" class="form-control mb-3 site-acc-input" />
                    <span asp-validation-for="Input.Email" class="text-danger "></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="form-label"></label>

                    <input asp-for="Input.Password" class="form-control site-acc-input" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger mb-3"></span>

                    <div class="forget-pass-wrapper">
                        <a class="m-3" href="~/Identity/Account/CreateNewPassword">Forgot Password?</a>
                    </div>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>

                <div class="w-100 my-3 text-center register-new-wrapper">
                    <div>
                        Don't have an account?
                    </div>
                    <a class="m-3" href="~/Identity/Account/Register">Sign up!</a>
                </div>
            </form>
        </section>
    </div>
</div>